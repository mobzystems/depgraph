{
  "build": {
    "beforeDevCommand": "dotnet build && npm run dev",
    "beforeBuildCommand": "dotnet publish -c Release && npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "DepGraph",
    "version": "0.8.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "os": {
        "all": true
      },
      "dialog": {
        "ask": true,
        "open": true
      },
      "shell": {
        "all": false,
        "open": true,
        "execute": true,
        "sidecar": true,
        "scope": [
          {
            "name": "explorer",
            "cmd": "explorer",
            "args": true,
            "sidecar": false
          },
          {
            "name": "services",
            "cmd": "services/DepGraphService",
            "args": true,
            "sidecar": false
          }
        ]
      },
      "fs": {
        "all": true
      },
      "path": {
        "all": true
      },
      "window": {
        "setTitle": true
      },
      "app": {
        "all": true
      },
      "http": {
        "scope": ["https://www.mobzystems.com/*"]
      }
    },
    "bundle": {
      "active": true,
      "targets": [
        "deb"
      ],
      "identifier": "depgraph.mobzystems.com",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [
        "services"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Dependency Graph"
      }
    ]
  }
}